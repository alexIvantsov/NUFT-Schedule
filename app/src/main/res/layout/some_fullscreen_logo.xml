<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424242">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="РЕГИСТРАЦИЯ"
        android:id="@+id/screen_name"
        android:textColor="#ffa3a3a3"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Для полноценного использования прилоения пожалуйста укажите свое имя и актуальнй номер Вашего мобильного телефона"
        android:id="@+id/explanation_text"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:textColor="#ffe9e9e9"
        android:layout_marginRight="75dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_marginTop="40dp"
        android:background="#ff979797"
        android:inputType="text"
        android:text="ИМЯ"
        android:paddingLeft="40dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textSize="15dp"
        android:textColor="#ffe4e4e4" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phone"
        android:background="#ff979797"
        android:layout_marginTop="3dp"
        android:text="НОМЕР ТЕЛЕФОНА"
        android:paddingLeft="40dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textSize="15dp"
        android:textColor="#ffe4e4e4" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/currency"
        android:background="#ff979797"
        android:layout_marginTop="3dp"
        android:text="МЕСТНАЯ ВАЛЮТА"
        android:paddingLeft="40dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textSize="15dp"
        android:textColor="#ffe4e4e4" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="ОТПРАВИТЬ"
        android:id="@+id/send_button"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="90dp"
        android:background="@drawable/custom_button"
        android:textColor="#ff979797"
        android:singleLine="true" />
</LinearLayout>